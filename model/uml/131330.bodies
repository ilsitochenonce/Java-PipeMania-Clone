            tileNonPossibiliLivelloCorrente.add(TileLoaderAndFactory.DOPPIACURVA_SINISTRASOTTO);

            // Genero le Tile del preview
            tiles = new LinkedList<Tile>();
            for (int i = 0; i < NUMTILES; i++) {
